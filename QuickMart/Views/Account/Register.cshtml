@using QuickMart.ViewModels
@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<script>
    function validateForm() {
        const agreeTerm = document.getElementById("agree-term");
        if (!agreeTerm.checked) {
            alert("You must agree all statements in Terms of service.");
            return false;
        }
        return true;
    }
</script>

<section class="signup">
    <div class="container">
        <div asp-validation-summary="All"></div>

        <div class="signup-content" style="background-color:beige">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" asp-action="Register" class="register-form" id="register-form" onsubmit="return validateForm()">

                    <div class="form-group">
                        <label for="name"></label>
                        <input type="text" asp-for="FName" id="name" placeholder="First Name" />
                        <span asp-validation-for="FName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Lname"></label>
                        <input type="text" asp-for="LName" id="Lname" placeholder="Last Name" />
                        <span asp-validation-for="LName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="email"></label>
                        <input asp-for="Email" id="email" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label for="Phone"></label>
                        <input asp-for="Phone" id="Phone" placeholder="Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label for="Address"></label>
                        <input asp-for="Address" id="Address" placeholder="Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="pass"></label>
                        <input asp-for="Password" id="pass" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label for="re-pass"></label>
                        <input asp-for="ConfirmPassword" id="re_pass" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>

                    <div class="form-group">

                        <input type="checkbox" class="checkbox agree-term" id="agree-term" asp-for="Agree">
                        <label for="agree-term" class="label-agree-term">
                            <span><span></span></span>I agree all statements in

                            <a href="#" class="term-service">Terms of service </a>

                        </label>

                        <span asp-validation-for="Agree" class="text-danger"></span>

                    </div>


                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>

                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/AccountImages/signup-image.jpg" alt="sing up image"></figure>
                <a href="Login" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>

@section Validation {

    <partial name="_ValidationScriptsPartial"></partial>

}